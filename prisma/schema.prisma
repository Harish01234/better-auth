generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}




enum FieldType {
  TEXT
  TEXTAREA
  NUMBER
  BOOLEAN
  SELECT
  RADIO
  CHECKBOX
  DATE
  FILE
}

enum QuizStatus {
  NOT_ATTEMPTED
  PASSED
  FAILED
}






/* =========================
   LOWERCASE MODELS (KEEP)
   ========================= */

model user {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  role          String   @default("USER")

  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt      @db.Timestamptz(6)

  account       account[]
  session       session[]

  formsCreated    form[]        // If user is admin
  submission      submission?   // ðŸ”¥ One submission per user
}

model account {
  id                    String   @id @default(cuid())
  accountId             String
  providerId            String
  userId                String

  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime? @db.Timestamptz(6)
  refreshTokenExpiresAt DateTime? @db.Timestamptz(6)
  scope                 String?
  password              String?

  createdAt             DateTime @default(now()) @db.Timestamptz(6)
  updatedAt             DateTime @updatedAt      @db.Timestamptz(6)

  user user @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model session {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime @db.Timestamptz(6)

  ipAddress String?
  userAgent String?

  userId    String
  user      user @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt      @db.Timestamptz(6)

  @@index([userId])
}

model verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @db.Timestamptz(6)

  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt      @db.Timestamptz(6)

  @@index([identifier])
}




model form {
  id            String   @id @default(cuid())
  title         String
  description   String?
  isActive      Boolean  @default(true)
  version       Int      @default(1)

  createdById   String
  createdBy     user     @relation(fields: [createdById], references: [id], onDelete: Restrict)

  fieldHeaders  fieldHeader[]
  submissions   submission[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt      @db.Timestamptz(6)

  @@index([isActive])
  @@index([createdById])
}


model fieldHeader {
  id       String @id @default(cuid())
  title    String
  order    Int

  formId   String
  form     form   @relation(fields: [formId], references: [id], onDelete: Cascade)

  fields   field[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt      @db.Timestamptz(6)

  @@index([formId])
}


model field {
  id            String     @id @default(cuid())
  label         String
  placeholder   String?
  type          FieldType
  required      Boolean    @default(false)
  order         Int

  // Validation
  minLength     Int?
  maxLength     Int?
  minValue      Float?
  maxValue      Float?
  regex         String?

  // For SELECT / RADIO / CHECKBOX
  options       Json?

  headerId      String
  header        fieldHeader @relation(fields: [headerId], references: [id], onDelete: Cascade)

  submissionAnswers submissionAnswer[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt      @db.Timestamptz(6)

  @@index([headerId])
}


model submission {
  id        String @id @default(cuid())

  userId    String  @unique   // ðŸ”¥ One submission per user globally
  user      user    @relation(fields: [userId], references: [id], onDelete: Restrict)

  formId    String
  form      form @relation(fields: [formId], references: [id], onDelete: Restrict)

  answers   submissionAnswer[]

  submittedAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([formId])
   @@index([userId])
   @@index([submittedAt])

}


model submissionAnswer {
  id           String  @id @default(cuid())

  submissionId String
  submission   submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  fieldId      String
  field        field @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  value        Json

  createdAt    DateTime @default(now()) @db.Timestamptz(6)

  @@index([submissionId])
  @@index([fieldId])
  
}

